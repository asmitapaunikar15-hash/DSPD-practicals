//Write a program to accept ‘n’ numbers into an array and then calculate the sum of numbers present in odd positions and even positions respectively.
#include<stdio.h>
int main(){
	int num[100],n,i,os=0,es=0;
	printf("Enter size of array:");
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
		scanf("%d",&num[i]);
	}
	for(i=0;i<n;i++)
	{
		if(i%2==0)
		es=es+num[i];
		else
		os=os+num[i];
	}
	printf("Sum of numbers at even position=%d\n",es);
	printf("Sum of numbers at odd position=%d\n",os);
}
